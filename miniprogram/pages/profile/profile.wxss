.container {
  padding: 30rpx;
}

.auth-header {
  margin-bottom: 20rpx;
}

.auth-title {
  font-size: 36rpx;
  font-weight: 600;
}

.auth-form {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.auth-input {
  border: 2rpx solid #eee;
  border-radius: 16rpx;
  padding: 20rpx;
}

.auth-submit {
  background: #FF4757;
  color: white;
  border-radius: 16rpx;
}

.auth-switch {
  background: #f5f5f5;
  color: #333;
  border-radius: 16rpx;
}