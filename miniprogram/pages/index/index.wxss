/* 登录注册页面样式 */
.auth-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  display: flex;
  flex-direction: column;
}

/* 顶部背景 */
.header-bg {
  padding: 60rpx 40rpx 40rpx;
  color: white;
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  margin-bottom: 30rpx;
}

.title-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.app-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  letter-spacing: 1rpx;
  text-transform: uppercase;
}

/* 登录注册卡片 */
.auth-card {
  flex: 1;
  background: white;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx 20rpx;
  margin-top: -20rpx;
}

/* TDesign Tabs 自定义样式 */
.auth-card .t-tabs {
  margin-bottom: 20rpx;
}

.auth-card .t-tabs__nav {
  background: transparent;
}

.auth-card .t-tabs__item {
  color: #999;
  font-size: 32rpx;
  font-weight: 500;
}

.auth-card .t-tabs__item--active {
  color: #FF6B35;
  font-weight: 600;
}

.auth-card .t-tabs__track {
  background: #FF6B35;
}

/* 表单容器 */
.form-container {
  padding: 20rpx 0;
}

.form-group {
  margin-bottom: 40rpx;
}

/* TDesign Input 自定义样式 */
.auth-card .t-input {
  margin-bottom: 20rpx;
}

.auth-card .t-input__label {
  color: #333;
  font-weight: 500;
}

.auth-card .t-input__control {
  border-radius: 16rpx;
  border: 2rpx solid #e5e5e5;
  background: #f8f9fa;
}

.auth-card .t-input__control:focus {
  border-color: #FF6B35;
  background: white;
}

/* 表单选项 */
.form-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.forgot-password {
  font-size: 28rpx;
  color: #FF6B35;
}

/* TDesign Button 自定义样式 */
.auth-card .t-button--primary {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  border: none;
  border-radius: 16rpx;
  font-weight: 600;
}

.auth-card .t-button--primary:disabled {
  background: #ccc;
  color: #999;
}

.auth-card .t-button--warning {
  border-color: #FF6B35;
  color: #FF6B35;
  border-radius: 16rpx;
  font-weight: 600;
}

.auth-card .t-button--warning:active {
  background: #FFF5F2;
}

/* 快速登录 */
.quick-login {
  margin-top: 30rpx;
}

/* TDesign Checkbox 自定义样式 */
.auth-card .t-checkbox {
  margin-bottom: 20rpx;
}

.auth-card .t-checkbox__label {
  color: #666;
  font-size: 28rpx;
}

/* 链接文本 */
.link-text {
  color: #FF6B35;
}

/* 体验AI助手按钮 */
.try-ai-assistant {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

/* 添加阴影和动画效果 */
.auth-card {
  box-shadow: 0 -10rpx 30rpx rgba(255, 107, 53, 0.1);
}

/* 输入框聚焦效果 */
.auth-card .t-input__control:focus {
  box-shadow: 0 0 0 4rpx rgba(255, 107, 53, 0.1);
}

/* 按钮悬停效果 */
.auth-card .t-button--primary {
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.auth-card .t-button--primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 53, 0.3);
}

/* Logo动画效果 */
.logo {
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

/* 标题渐变效果 */
.app-title {
  background: linear-gradient(45deg, #ffffff, #fff5f2);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
}

/* 响应式调整 */
@media (max-width: 375px) {
  .auth-card {
    padding: 30rpx 15rpx;
  }
  
  .header-bg {
    padding: 40rpx 30rpx 30rpx;
  }
  
  .app-title {
    font-size: 40rpx;
  }
  
  .app-subtitle {
    font-size: 22rpx;
  }
  
  .form-group {
    margin-bottom: 30rpx;
  }
}