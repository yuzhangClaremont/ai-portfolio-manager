/* AI金融助手页面样式 */
.chatbot-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f7fa;
}

/* 聊天消息区域 */
.chat-messages {
  flex: 1;
  height: calc(100vh - 120rpx);
  padding: 20rpx;
  box-sizing: border-box;
}

.messages-container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
}

/* 消息项样式 */
.message-item {
  display: flex;
  margin-bottom: 30rpx;
  animation: fadeIn 0.3s ease-in;
}

.user-message {
  flex-direction: row-reverse;
}

.assistant-message {
  flex-direction: row;
}

.message-avatar {
  flex-shrink: 0;
  margin: 0 20rpx;
}

.message-content {
  flex: 1;
  max-width: 70%;
}

.message-bubble {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.user-message .message-bubble {
  background: #0052D9;
  color: #ffffff;
}

.assistant-message .message-bubble {
  background: #ffffff;
  color: #333333;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.5;
  word-wrap: break-word;
}

.message-time {
  font-size: 22rpx;
  color: #999999;
  margin-top: 8rpx;
  display: block;
  text-align: right;
}

.user-message .message-time {
  text-align: left;
}

.message-loading {
  margin-top: 10rpx;
}

/* 欢迎消息样式 */
.welcome-features {
  margin: 20rpx 0;
}

.welcome-features .t-cell {
  background: #f8f9fa;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

/* 输入区域样式 */
.input-section {
  background: #ffffff;
  border-top: 1rpx solid #e5e5e5;
  padding: 20rpx;
  position: sticky;
  bottom: 0;
  z-index: 100;
}

.input-container {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 24rpx;
  padding: 0 20rpx;
}

.message-input {
  flex: 1;
  background: transparent;
  border: none;
  padding: 20rpx 0;
}

.send-button {
  margin-left: 20rpx;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 弹窗样式 */
.settings-popup,
.config-popup {
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.popup-content {
  max-height: 60vh;
  overflow-y: auto;
}

.config-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.config-status.configured {
  background: #e8f5e8;
  color: #52c41a;
}

.config-status.not-configured {
  background: #fff2e8;
  color: #fa8c16;
}

.config-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.config-actions .t-button {
  flex: 1;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式设计 */
@media (max-width: 375px) {
  .message-content {
    max-width: 75%;
  }
  
  .message-bubble {
    padding: 16rpx 20rpx;
  }
  
  .message-text {
    font-size: 26rpx;
  }
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 4rpx;
}

::-webkit-scrollbar-track {
  background: #f1f1f1;
}

::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
}